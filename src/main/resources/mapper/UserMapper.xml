<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.star.mall.persistence.mapper.UserMapper">
    <resultMap id="User" type="com.star.mall.persistence.model.User">
        <id property="id" column="id_" jdbcType="VARCHAR"/>
        <result property="username" column="username_" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getByUsername" parameterType="java.lang.String" resultMap="User">
        select * from user where username_ = #{username}
    </select>
</mapper>